<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>
<main>
        <% if(error) {%>
            <div class="user-message user-message--error">
                <%= error %>
            </div>
        <% }%>
    <form class="login-form" action="/login" method="POST">
        <div class="form-control">
            <label for="email">Email</label>
            <input
                    class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                    type="email"
                    name="email"
                    id="email"
                    value="<%= oldInput.email %>">

                <% if (validationErrors.find(e => e.param === 'email')) { %>
                    <div class="input-error-message">
                        <i>
                            <%= (validationErrors.find(e => e.param === 'email')).msg %>
                        </i>
                    </div>
                <% } %>
        </div>
        <div class="form-control">
            <label for="password">Password</label>
            <input
                    class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                    type="password"
                    name="password"
                    id="password"
                    value="<%= oldInput.password %>">

                <% if (validationErrors.find(e => e.param === 'password')) { %>
                    <div class="input-error-message">
                        <i>
                            <%= (validationErrors.find(e => e.param === 'password')).msg %>
                        </i>
                    </div>
                <% } %>

        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="btn" type="submit">
            Login
        </button>
    </form>

    <div class="centered">
        <a href="/reset-password">Reset password</a>
    </div>
</main>
</body>

</html>